//C program to display day of a week using switch case
#include<stdio.h>
int main()
{
int day;
printf("\nEnter any no. from 1-7: ");
scanf("%d",&day);
switch(day)
{
case 1:
printf("\nMonday");
break;
case 2:
printf("\nTuesday");
break;
case 3:
printf("\nWednesday");
break;
case 4:
printf("\nThursday");
break;
case 5:
printf("\nFriday");
break;
case 6:
printf("\nSaturday");
break;
case 7:
printf("\nSunday");
break;
default:
printf("\nWrong choice!");
break;
}
return 0;
}
