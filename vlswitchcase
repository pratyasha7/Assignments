//C program to check character is vowel or not using switch case
#include<stdio.h>
int main()
{
char ch;
printf("Enter a letter: ");
scanf("%c",&ch);
switch(ch)
{
case 'a':
printf("\nIt is a vowel");
break;
case 'e':
printf("\nIt is a vowel");
break;
case 'i':
printf("\nIt is a vowel");
break;
case 'o':
printf("\nIt is a vowel");
break;
case 'u':
printf("\nIt is a vowel");
break;
case 'A':
printf("\nIt is a vowel");
break;
case 'E':
printf("\nIt is a vowel");
break;
case 'I':
printf("\nIt is a vowel");
break;
case 'O':
printf("\nIt is a vowel");
break;
case 'U':
printf("\nIt is a vowel");
break;
default:
printf("\nThe entered letter isn't a vowel");
break;
}
return 0;
}
